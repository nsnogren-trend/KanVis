{
  "name": "kanvis4",
  "displayName": "KanVis",
  "description": "Manage VS Code windows in a kanban-style sidebar - track your projects across multiple workspaces",
  "version": "4.0.0",
  "publisher": "kanvis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nsnogren-trend/KanVis.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "kanban",
    "windows",
    "workspace",
    "projects",
    "organization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kanvis4.openBoard",
        "title": "KanVis: Open Board"
      },
      {
        "command": "kanvis4.refreshBoard",
        "title": "KanVis: Refresh Board"
      },
      {
        "command": "kanvis4.undo",
        "title": "KanVis: Undo Last Action"
      },
      {
        "command": "kanvis4.redo",
        "title": "KanVis: Redo Last Action"
      }
    ],
    "configuration": {
      "title": "KanVis",
      "properties": {
        "kanvis.enableCRDTSync": {
          "type": "boolean",
          "default": false,
          "description": "Enable CRDT-based synchronization for conflict-free merging across multiple VS Code windows (experimental)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kanvis4",
          "title": "KanVis",
          "icon": "$(layout)"
        }
      ]
    },
    "views": {
      "kanvis4": [
        {
          "type": "webview",
          "id": "kanvis4.boardView",
          "name": "Windows"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register 'src/**/*.test.ts'"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "mocha": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "zod": "^4.3.6"
  },
  "dependencies": {
    "lib0": "^0.2.117",
    "yjs": "^13.6.29"
  }
}
